# Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
API_TITLE=License Plate Recognition API
API_VERSION=1.0.0
API_DESCRIPTION=API for detecting and recognizing Vietnamese license plates

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# Model Configuration
YOLO_CONF_THRESHOLD=0.25
YOLO_IOU_THRESHOLD=0.45

# OCR Configuration
OCR_LANGUAGES=["en"]
OCR_GPU=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Image Processing
MAX_IMAGE_SIZE=10485760
